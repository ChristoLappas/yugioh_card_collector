<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Yu_Gi_Oh__Card_Collector.Views.DeckDetailsView"
             xmlns:local="clr-namespace:Yu_Gi_Oh__Card_Collector.ViewModels"
             x:DataType="local:DeckDetailsViewModel"
             xmlns:model="clr-namespace:Yu_Gi_Oh__Card_Collector.Models"
             Title="Deck cards">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding GetAllDeckCardsCommand}"/>
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout >
            <Label Text="{Binding Deck.Name}" HorizontalOptions="Center" FontSize="Large" Margin="15"/>


            <CollectionView x:Name="YugiohDeckCardCollection" ItemsSource="{Binding DeckListAPI}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Card">
                        <VerticalStackLayout Margin="10">
                            <Label Text="{Binding Name}" HorizontalTextAlignment="Center" FontSize="Medium" FontAttributes="Bold" Margin="0,10,0,10"></Label>
                            <Image Source="{Binding CardImages[0].ImageUrl}" Margin="0,10,0,10"></Image>

                            <Frame BorderColor="Transparent" HasShadow="True" CornerRadius="12" Margin="0,10">

                                <Frame.Background>
                                    <LinearGradientBrush EndPoint="1,1">
                                        <GradientStop Color="{StaticResource Tertiary}" Offset="0.2"/>
                                        <GradientStop Color="{StaticResource Secondary}" Offset="0.66"/>
                                        <GradientStop Color="{StaticResource Primary}" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Frame.Background>

                                <VerticalStackLayout>


                                    <Label Text="{Binding Description}" Margin="0,10,0,10"></Label>


                                    <Label Text="{Binding Type}"></Label>
                                    <HorizontalStackLayout>
                                        <Label Text="Attack: "></Label>
                                        <Label Text="{Binding Attack}"></Label>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>
                                        <Label Text="Defense: "></Label>
                                        <Label Text="{Binding Defense}"></Label>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>
                                        <Label Text="Level: "></Label>
                                        <Label Text="{Binding Level}"></Label>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>
                                        <Label Text="Race: "></Label>
                                        <Label Text="{Binding Race}"></Label>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>
                                        <Label Text="Attribute: "></Label>
                                        <Label Text="{Binding Attribute}"></Label>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>
                                        <Label Text="{Binding Source={RelativeSource AncestorType={x:Type local:DeckDetailsViewModel}}, Path=Currency}"></Label>
                                        <Label Text="{Binding CardPrices[0].CardmarketPrice}"></Label>
                                    </HorizontalStackLayout>

                                </VerticalStackLayout>
                            </Frame>

                            <Button Text="âŒ" Command="{Binding Source={RelativeSource AncestorType={x:Type local:DeckDetailsViewModel}}, Path=DeleteFromDeckCommand}" CommandParameter="{Binding Name}" HorizontalOptions="Center" BackgroundColor="Transparent" FontSize="Large" Margin="10"/>

                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>